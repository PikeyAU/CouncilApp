<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserTracking">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="403dp"
        android:layout_height="110dp"
        android:layout_marginBottom="400dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="356dp"
        android:layout_height="32dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/track_your_reports"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.039" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:collapseColumns="0.5
"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="33dp">

            <TextView
                android:id="@+id/LocationColumn"
                android:layout_width="90dp"
                android:layout_height="63dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="@string/location"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TimeColumn"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="@string/time"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/SituationColumn"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="@string/situation"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FeedbackColumn"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="@string/feedback"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="90dp"
                android:layout_height="63dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="90dp"
                android:layout_height="63dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="90dp"
                android:layout_height="63dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView41"
                android:layout_width="90dp"
                android:layout_height="63dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnRetrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrieve Report Details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.509" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRetrieve"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />


</androidx.constraintlayout.widget.ConstraintLayout>